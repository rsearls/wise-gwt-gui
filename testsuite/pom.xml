            </modules>
            <properties>
                <server.home>${project.basedir}/target/wildfly-${wildfly1010.version}</server.home>
                <jbossws.integration.target>wildfly1010</jbossws.integration.target>
                <jboss.home>${server.home}</jboss.home>
